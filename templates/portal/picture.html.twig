{% extends "portal/layout.html.twig" %}


{% block content %}

<h2>{{ oAccount.getDisplayName() }} </h2>

<div class="row" > 
    <div class="col-md-6 text-left" style="margin-bottom:10px;" >
           <img src="{{ path('picture', { 'accountname': accountname } ) }}" width="100px" />
           
        <h3>Upload picture</h3>
        <form action="#" method="post" id="frmPicture" name="frmPicture"  enctype="multipart/form-data" >
            {{ form_widget(form) }}    
            
            <div class="buttonbox">
                <button type="submit" class="btn btn-success">
                    <i class="fa fa-server"></i>
                    Save
                </button>
                <a href="{{ path('portal_index') }}" class="btn btn-default" role="button">
                    <i class="fa fa-arrow-left"></i>
                    Back
                </a>
            </div>
        </form>         
    </div>
    <div class="col-md-6">   
        <ul>
            <li>About: {{ oAccount.getAbout()|raw|nl2br }}</li>
        </ul>
    </div>   
</div>

<div class="row">
    
    <div class="col-md-10" ><h2>Users</h2></div>
    <div class="col-md-2" >
        <div class="buttonbox">
            <button type="button" class="btn btn-primary" data-toggle="modal"  data-target="#popupAssignUsers" data-keyboard="true" data-backdrop="static">
              <i class="fa fa-plus"></i>   Add User</button>
         </div>
    </div>         
    <table class="table">
        <tr>
            <td>
        {% for aAccUser in aAccUsers %}
                <div class="col-md-4 table-bordered">{{ aAccUser }}</div>
        {% endfor %}
            </td>
        </tr>
    </table>
    
      
    <div class="row" >
        <div class="col-md-10" ><h2>Spaces</h2></div>
        <div class="col-md-2" >
            <div class="buttonbox">
                <a href="{{ path('portal_sapces_add', {'accountname' :accountname} ) }}" class="btn btn-primary" role="button">
                    <i class="fa fa-plus"></i>
                    Add Space
                </a>
        </div>
        </div>
    </div> 
  
    <table  class="table">
        <tr>
            <th class="text-left">Space</th>
            <th class="text-left">Description</th>
        </tr>
        {% for aRows in aSpaces %}
            <tr>
                <td class="text-left" >
                    <a href="{{ path('portal_spaces_view', {'id' :aRows.id } ) }}" title="view" >
                    {{ aRows.name }}
                    </a>
                </td>
                <td class="text-left" >{{ aRows.description|raw|nl2br }}</td>
            </tr>
        {% endfor %}
    </table>
</div>

<!-- Modal -->
<div class="modal fade" id="popupAssignUsers" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <h4 class="modal-title" id="myModalLabel">&nbsp;</h4>
            </div>
            <div class="modal-body">
                <div id="msgAppId" style="display: none;"
                    class="alert alert-success" role="alert"></div>
                <div>
                    <form method="post" name="frmUser" id="frmUser" action="{{ path('protal_account_user_add', {'accountname' :accountname} ) }}" >
                        <div class="form-group">
                            <label for="recipient-name" class="control-label">Usersname</label>
                            <input type="text" class="form-control" id="userName" name="userName" required="required">
                        </div>
                        <button type="submit" class="btn btn-success">
                            <i class="fa fa-server"></i>
                            Save
                        </button>
                    </form>
                </div>                
            </div>            
        </div>
    </div>
</div>
{% endblock %}